<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:listPreferredItemHeight"
    android:layout_marginLeft="@dimen/activity_horizontal_margin_medium"
    android:layout_marginTop="@dimen/activity_vertical_margin_medium"
    android:layout_marginRight="@dimen/activity_horizontal_margin_medium"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin_medium"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
        android:layout_marginRight="@dimen/activity_horizontal_margin_small"
        android:background="#fff"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/image_view_unit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_title"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/image_view_unit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_sub_title"
            android:textColor="@color/colorGrey"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
