<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jeeni.content.classic">

    <application
        android:name=".RootApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.MyFilesActivity"></activity>
        <activity
            android:name=".activities.NewContentActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activities.UnitDetailsActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activities.SplashScreenActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.VideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_video"
            android:launchMode="singleTask"
            android:parentActivityName=".activities.UnitDetailsActivity"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jeeni.content.classic.activities.CourseDetailsActivity" />
        </activity>
        <activity
            android:name=".activities.PdfActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_pdf"
            android:launchMode="singleTask"
            android:parentActivityName=".activities.UnitDetailsActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jeeni.content.classic.activities.CourseDetailsActivity" />
        </activity>
        <activity
            android:name=".activities.CourseDetailsActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activities.CourseListActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activities.LoginActivity"
            android:launchMode="singleTask" />

        <receiver android:name=".services.ServiceRestarter">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <service
            android:name=".services.ForeGroundService"
            android:enabled="true" />

        <service
            android:name=".services.ForeGroundAutoSyncService"
            android:enabled="true" />
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>